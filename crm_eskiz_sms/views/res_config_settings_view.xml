<odoo>
  <!-- Root menu -->
  <menuitem id="menu_eskiz_sms_root"
            name="Eskiz SMS"
            parent="crm.crm_menu_root"
            sequence="80"/>

  <!-- Settings view -->
  <record id="res_config_settings_view_form_eskiz_standalone" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.eskiz.standalone</field>
    <field name="model">res.config.settings</field>
    <field name="arch" type="xml">
      <form string="Eskiz SMS Settings">
        <sheet>
          <group string="Eskiz SMS">
            <field name="eskiz_sms_email"/>
            <field name="eskiz_sms_password" password="True"/>
            <field name="eskiz_sms_from"/>
            <field name="eskiz_sms_callback_url"/>
            <field name="eskiz_sms_token"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_res_config_settings_eskiz" model="ir.actions.act_window">
    <field name="name">Eskiz SMS Settings</field>
    <field name="res_model">res.config.settings</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="res_config_settings_view_form_eskiz_standalone"/>
    <field name="target">current</field>
  </record>

  <!-- Child menu (now the parent exists) -->
  <menuitem id="menu_eskiz_sms_settings"
            name="Settings"
            parent="crm_eskiz_sms.menu_eskiz_sms_root"
            action="action_res_config_settings_eskiz"
            sequence="10"/>
</odoo>
