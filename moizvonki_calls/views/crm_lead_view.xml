<odoo>
  <record id="crm_lead_form_inherit_moizvonki" model="ir.ui.view">
    <field name="name">crm.lead.form.inherit.moizvonki</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@class='oe_button_box']" position="inside">
        <button
          name="action_open_moizvonki_calls"
          type="object"
          class="oe_stat_button"
          icon="fa-phone"
          invisible="not partner_id or (not partner_id.phone and not partner_id.mobile)"
        >
          <field name="moizvonki_call_count" widget="statinfo" string="Qo'ng'iroqlar"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
