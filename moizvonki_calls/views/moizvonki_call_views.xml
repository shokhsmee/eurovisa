<odoo>
  <record id="view_moizvonki_call_list" model="ir.ui.view">
    <field name="name">moizvonki.call.list</field>
    <field name="model">moizvonki.call</field>
    <field name="arch" type="xml">
      <list string="Qo'ng'iroqlar tarixi" default_order="start_datetime desc">
        <field name="start_datetime" string="Vaqti"/>
        <field name="direction" string="Turi"/>
        <field name="status"
           string="Holati"
           widget="badge"
           decoration-success="status == 'answered'"
           decoration-danger="status == 'missed'"
           decoration-warning="status == 'unknown'"/>
        <field name="from_number" string="Kimdan"/>
        <field name="to_number" string="Kimga"/>
        <field name="external_number" string="Tashqi raqam"/>
        <field name="employee_id" string="Xodim"/>
        <field name="employee_name" string="Xodim email" optional="hide"/>
        <field name="duration_display" string="Gaplashish vaqti"/>
        <field name="has_recording" string="Yozuv mavjud" widget="boolean_toggle"/>
      </list>
    </field>
  </record>

  <record id="view_moizvonki_call_form" model="ir.ui.view">
    <field name="name">moizvonki.call.form</field>
    <field name="model">moizvonki.call</field>
    <field name="arch" type="xml">
      <form string="Qo'ng'iroq">
        <sheet>
          <group>
            <group>
              <field name="db_call_id" readonly="1"/>
              <field name="event_pbx_call_id" readonly="1"/>
              <field name="start_datetime" readonly="1"/>
              <field name="direction" readonly="1"/>
              <field name="status" readonly="1"/>
            </group>

            <group>
              <field name="from_number" readonly="1"/>
              <field name="to_number" readonly="1"/>
              <field name="external_number" readonly="1"/>
              <field name="employee_id" readonly="1"/>
              <field name="employee_name" readonly="1" string="Xodim email"/>
            </group>
          </group>

          <separator string="DAVOMIYLIGI"/>
          <group>
            <field name="duration_sec" readonly="1"/>
            <field name="duration_display" readonly="1"/>
            <field name="answer_datetime" readonly="1"/>
            <field name="end_datetime" readonly="1"/>
          </group>

          <notebook>
            <page string="Audio">
              <group>
                <field name="has_recording" readonly="1"/>
              </group>

              <group>
                  <field name="audio_embed" nolabel="1" widget="html" readonly="1"/>
              </group>

            </page>
            <page string="Texnik ma'lumot">
              <field name="raw_json" nolabel="1" widget="text"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_moizvonki_calls" model="ir.actions.act_window">
    <field name="name">Qo'ng'iroqlar tarixi</field>
    <field name="res_model">moizvonki.call</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
