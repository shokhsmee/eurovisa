<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_users_form_show_is_visa_agent" model="ir.ui.view">
    <field name="name">res.users.form.show.is.visa.agent</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">

      <!-- Very safe: every user form has a <sheet> -->
      <xpath expr="//sheet" position="inside">
        <group string="Visa">
          <field name="is_visa_agent"/>
        </group>
      </xpath>

    </field>
  </record>
</odoo>
